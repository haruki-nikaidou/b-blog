---
import {COPYRIGHT_NAME, GLOBAL_STYLE} from "../consts";
import "@/styles/components.scss";
import {clsx} from "clsx";
const today = new Date();
---

<footer
    id="footer-container"
    class={clsx(
      "card",
      GLOBAL_STYLE === 'glass' && 'glass',
      GLOBAL_STYLE === 'lightGlass' && 'light-glass',
    )}
>
  <p>
    &copy; {today.getFullYear()} by Nikaidou Haruki
  </p>
  <p>
    Licensed under
    <a href="https://creativecommons.org/licenses/by-nc-sa/4.0/" class="link">CC BY-NC-SA 4.0</a>
  </p>
</footer>

<style lang="scss">
  #footer-container {
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;

    * {
      margin-bottom: 0;
    }
  }

  footer {
    text-align: center;
  }
</style>