---
import Card from "./Card.astro";
import TagList from "./TagList.astro";
import {imageDeliveryUrl} from "@/utils";
import "@/styles/components.scss";
import '@/styles/global.scss';

interface Props {
    slug: string
    heroImageId?: string
    title: string
    pubDate: Date,
    tags: string[]
    updatedDate?: Date
}

const {slug, heroImageId, title, pubDate, updatedDate, tags} = Astro.props

---

<Card
    class="post-card"
>
    <a
        class='img-container'
        href={`/blog/${slug}`}
    >
        {heroImageId && <img src={imageDeliveryUrl(heroImageId, 'small')} alt={title} loading="lazy"/>}
    </a>
    <h4>
        <a class="link" href={`/blog/${slug}`}>
            {title}
        </a>
    </h4>
    <TagList tags={tags} />
    <div class="date-container">
        <p class="date">
            {updatedDate && "Published at "}{pubDate.toLocaleDateString()}
        </p>
        {
            updatedDate && (
                <p class="date">
                    Updated at: {updatedDate.toLocaleDateString()}
                </p>
            )
        }
    </div>
</Card>

<style lang="scss">
    @use "../styles/colors.scss";

    .post-card {
        display: flex;
        flex-direction: column;
        gap: .5rem;
        justify-content: space-between;
        *:not(:last-child) {
            margin: 0;
        }
    
        padding-bottom: .5rem;

        & > h4 {
            margin-top: 1rem;
        }

        a {
            text-decoration: none;
        }
    }

    .date-container {
        .date {
            color: var(--color-muted-foreground);
            font-size: 0.875rem;
        }
    }

    .img-container {
        aspect-ratio: 16/9;
        overflow: clip;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 0.75rem;
        cursor: pointer;

        img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease-in-out;
            &:hover {
                transform: scale(1.2);
            }
        }
    }
</style>