---
import Card from "./Card.astro";
import {GLOBAL_STYLE} from "@/consts";
import "@/styles/components.scss";
import '@/styles/global.scss';

interface Props {
    slug: string
    heroImage?: string
    title: string
    pubDate: Date,
    tags: string[]
    updatedDate?: Date
}

const {slug, heroImage, title, pubDate, updatedDate, tags} = Astro.props

---

<Card
    class="post-card"
    variant={GLOBAL_STYLE}
>
    <a
        class='img-container'
        href={`/blog/${slug}`}
    >
        <img src={heroImage} alt={title} loading="lazy"/>
    </a>
    <h4>
        <a class="link" href={`/blog/${slug}`}>
            {title}
        </a>
    </h4>
    <div class="tag-list">
        {tags.map((tag) => (
            <span class="tag">{tag}</span>
        ))}
    </div>
    <div class="date-container">
        <p class="date">
            {updatedDate && "Published at "}{pubDate.toLocaleDateString()}
        </p>
        {
            updatedDate && (
                <p class="date">
                    Updated at: {updatedDate.toLocaleDateString()}
                </p>
            )
        }
    </div>
</Card>

<style lang="scss">
    @use "../styles/colors.scss";

    .post-card {
        display: flex;
        flex-direction: column;
        gap: .5rem;
        justify-content: space-between;
        *:not(:last-child) {
            margin: 0;
        }
    
        padding-bottom: .5rem;

        & > h4 {
            margin-top: 1rem;
        }

        a {
            text-decoration: none;
        }
    }

    .date-container {
        .date {
            color: colors.$color-slate-700;
            font-size: 0.875rem;
        }
    }

    .tag-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.25rem;
        margin: 0;

        .tag {
            padding: 0.125rem 0.5rem;
            border-radius: 5rem;
            background-color: colors.$color-slate-50;
            color: colors.$color-slate-700;
            font-size: 0.75rem;
            margin-right: 0.25rem;
            margin-bottom: 0.25rem;
            cursor: pointer;
            transition: background-color 0.25s ease-in-out;
        }
    }

    .img-container {
        aspect-ratio: 16/9;
        overflow: clip;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 0.75rem;
        cursor: pointer;

        img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease-in-out;
            &:hover {
                transform: scale(1.2);
            }
        }
    }
</style>